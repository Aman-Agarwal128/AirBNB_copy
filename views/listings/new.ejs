<% layout("layouts/boilerplate") %>
<body>
    <div class="row mt-3">
        <div class="col-8 offset-2">

            <h3>Create a New Listing</h3>
            
            <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                    <label for="title" class="form-label">Title</label>
                    <input name="listing[title]" class="form-control" placeholder="Add a catchy title" required>
                    <div class="valid-feedback">Title looks good!</div>
                    <div class="invalid-feedback">Enter a Title</div>
                </div>
                
                <div class="mb-3">
                    <label for="description" class="form-label">Description</label>
                    <textarea name="listing[description]" class="form-control" required></textarea>
                    <div class="valid-feedback">Description looks good!</div>
                    <div class="invalid-feedback">Enter a Description</div>
                </div>

                <div class="mb-3">
                    <label for="image" class="form-label">Upload Listing Image</label>
                    <input name="listing[image]" class="form-control" type="file">
                    required
                </div>
                
                <div class="mb-3 row">

                     <div class="col-md-4">
                        <label for="price" class="form-label">Price</label>
                        <input name="listing[price]" class="form-control" placeholder="1200" type="number" required>
                        <div class="valid-feedback">Price looks good!</div>
                        <div class="invalid-feedback">Enter a valid Price</div>
                    </div>

                    <div class="col-md-8">
                        <label for="country" class="form-label">Country</label>
                        <input name="listing[country]" class="form-control" placeholder="India" required>
                        <div class="valid-feedback">Country looks good!</div>
                        <div class="invalid-feedback">Enter a Country</div>
                    </div>

                </div>

                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input name="listing[location]" class="form-control" placeholder="Jaipur, Rajasthan" required>
                    <div class="valid-feedback">Location looks good!</div>
                    <div class="invalid-feedback">Enter a Location</div>
                </div>

                <button class="btn btn-dark add-btn mt-3">Add</button>
            </form>
        </div>
    </div>
</body>
